<div class="container">
  <div class="row mt-4 mb-4">
    <div class="col-xs-12 col-sm-8">
      <h2 class="mb-4">Bib for <%= @bib.race.name %></h2>
      <% unless @bib.race.date.match?(/Non connue/)  %>
        <p>📅 <%= @bib.race.date.gsub(/(au)/, ' au') %></p>
      <% else %>
        <p>📅 The date is not known to our services. <%= link_to "See race details", race_path(@bib.race) %></p>
      <% end %>
      <p>📍 <%= @bib.race.address.gsub(/([()])/,' \1 ') %></p>
      <hr>
      <p>Your bib id is: <%= @bib.id %></p>
    </div>
    <div class="col-sm-4">
      <img class="rounded" width="100%" max-height="500" src="https://images.unsplash.com/photo-1444491741275-3747c53c99b4?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=774&q=80" alt="">
    </div>
  </div>
</div>
