<div class="container">
  <div class="row mt-4 mb-4">
    <div class="col-xs-12 col-sm-8">
      <h2 class="mb-4">Sell your bib</h2>
      <%= simple_form_for @bib do |f| %>
        <%= f.collection_select :race_id, Race.all, :id, :name, label: "Select the race" %>
        <%= f.input :price, label: false, placeholder: "Price of your bib" %>
        <%= f.submit "Submit", class: "btn btn-primary" %>
      <% end %>
      <%= link_to "Back to races", races_path %>
    </div>
    <div class="col-sm-4">
      <img class="rounded" width="100%" max-height="500" src="https://images.unsplash.com/photo-1444491741275-3747c53c99b4?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=774&q=80" alt="">
    </div>
  </div>
</div>
