<div class="container">
  <div class="row mt-4 mb-4">
    <div class="col-xs-12 col-sm-8">
      <h2 class="mb-4">Vendez votre dossard</h2>
      <%= simple_form_for @bib do |f| %>
       <%= f.input :race_id, as: :hidden, input_html: { value: params[:race_id] } %>
        <%= f.collection_select :race_id, Race.all, :id, :name, prompt: "Les courses déjà présentes sur Rebib" %>
        <%= f.input :price, as: :float, label: false, placeholder: "Prix du dossard" %>
        <%= f.submit "Envoyer", class: "btn btn-primary" %>
      <% end %>
      <%= link_to "Retour aux courses", races_path %>
    </div>
    <div class="col-sm-4">
      <img class="rounded" width="100%" max-height="500" src="https://images.unsplash.com/photo-1444491741275-3747c53c99b4?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=774&q=80" alt="">
    </div>
  </div>
</div>
