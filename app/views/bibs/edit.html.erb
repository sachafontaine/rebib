<div class="container">
  <div class="row mt-4 mb-4">
    <div class="col-xs-12 col-sm-8">
      <h2 class="mb-4">Modifiez votre dossard</h2>
      <hr>
      <%= simple_form_for @bib do |f| %>
        <%= f.input :race_id, as: :hidden, input_html: { value: params[:race_id] } %>
        <%= f.collection_select :race_id, Race.all, :id, :name %>
        <%= f.input :price_cents, as: :float, label: "Nouveau prix du dossard ?", input_html: { autocomplete: "price" } %>
        <%= f.input :available,
                        required: true,
                        input_html: { autocomplete: "available" },
                        as: :select, label: "Le dossard est-il toujours disponible ?",
                        collection: [['free', 'Oui'], ['unfree', 'Non']],
                        label_method: :second,
                        value_method: :first %>
        <%= f.submit "Modifier", class: "btn btn-primary" %>
      <% end %>
    </div>
    <div class="col-sm-4">
      <img class="rounded" width="100%" max-height="500" src="https://images.unsplash.com/photo-1508730328641-47c1616341b7?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=930&q=80" alt="">
    </div>
  </div>
</div>
<%=  %>
