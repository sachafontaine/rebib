<h1>Chatting with <%= @chatroom.with(current_user).first_name %></h1>

<div id="chatroom-main">
  <div id="chatroom-body">
    <%= render @chatroom.messages %>
  </div>

  <%= form_for @message do |f| %>
    <%= hidden_field_tag 'chatroom_id', @chatroom.id %>
    <%= f.label :body %>
    <%= f.text_area :body %>

    <%= f.submit %>
  <% end %>
</div>
