<div class="container col-md-6 my-5">
  <h2 class="text-center mt-4 mb-4">Éditer votre profil</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name, required: true, autofocus: true, label: false, placeholder: "Votre prénom" %>
        <%= f.input :last_name, required: true, autofocus: true, label: false, placeholder: "Votre nom" %>
        <%= f.input :email, required: true, autofocus: true %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>
        <%= f.input :phone_number, required: true, autofocus: true, label: false, placeholder: "Numéro de téléphone" %>
        <%# <%= f.input :photo, as: :file, label: false, placeholder: "Photo de profil" %>
        <%= f.input :password,
                    hint: "laissez cette case vide si vous ne souhaitez pas modifier votre mot de passe",
                    required: false,
                    label: false, placeholder: "Mot de passe",
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: false,
                    label: false, placeholder: "Confirmez votre mot de passe",
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :current_password,
                    hint: "nous avons besoin de votre mot de passe actuel pour confirmer les changements",
                    required: true,
                    label: false, placeholder: "Mot de passe actuel",
                    input_html: { autocomplete: "current-password" } %>
      </div>

      <div class="form-actions text-center">
        <%= f.button :submit, "Update", class: "btn btn-primary" %>
      </div>
    <% end %>
    <p class="text-center mt-3">Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
</div>
