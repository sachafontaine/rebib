<div class="container col-md-6 my-5">
  <h2 class="text-center mt-4 mb-4">Créer un compte</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name, required: true, autofocus: true, label: false, placeholder: "Votre prénom" %>
        <%= f.input :last_name, required: true, autofocus: true, label: false, placeholder: "Votre nom" %>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label: false, placeholder: "Votre adresse e-mail",
                    input_html: { autocomplete: "email" } %>
        <%= f.input :phone_number, required: true, autofocus: true, label: false, placeholder: "Numéro de téléphone" %>
        <%= f.input :password,
                    required: true,
                    label: false, placeholder: "Mot de passe",
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    label: false, placeholder: "Confirmez votre mot de passe",
                    input_html: { autocomplete: "new-password" } %>
      </div>

      <div class="form-actions text-center">
        <%= f.button :submit, "Envoyer", class: "btn btn-primary" %>
      </div>
    <% end %>
    <div class="text-center mt-3">
      <%= link_to "Se connecter", new_user_session_path %>
    </div>
</div>
