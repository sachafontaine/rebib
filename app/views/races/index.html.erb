<div class="container">
  <div class="program-list mb-4">
    <h2 class="text-center mt-4 mb-4">Courses à venir</h2>
      <%= render 'shared/searchbar' %>
      <% if @races.count > 0 %>
        <div class="row">
          <% @races.each do |race| %>
            <div class="col-sm-4 col-md-4 mb-3">
              <%= link_to race, class:"card-offer" do %>
                <div class="card-offer">
                  <div class="card-offer-infos">
                    <h4><%= race.name %></h4>
                    <% unless race.date.match?(/Non connue/)  %>
                      <p>📅 <%= race.date.gsub(/(au)/, ' au') %></p>
                    <% end %>
                    <p>📍 <%= race.address.gsub(/([()])/,' \1 ') %></p>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <%= link_to "Ajouter une course", new_race_path, class:"btn btn-primary" %>
      <% end %>
  </div>
</div>
