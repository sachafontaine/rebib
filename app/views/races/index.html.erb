<div class="container">
  <div class="program-list mb-4">
    <h2 class="text-center mt-4 mb-4">Races to come</h2>
      <%= form_tag races_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control mb-3",
          placeholder: "Find a race" %>
        <%= submit_tag "Search", class: "btn btn-primary mb-3" %>
      <% end %>
      <% if @races.count > 0 %>
        <div class="row">
          <% @races.each do |race| %>
            <div class="col-sm-4 col-md-4 mb-3">
              <%= link_to race, class:"card-offer" do %>
                <div class="card-offer">
                  <div class="card-offer-infos">
                    <h4><%= race.name %></h4>
                    <% unless race.date.match?(/Non connue/)  %>
                      <p>üìÖ <%= race.date.gsub(/(au)/, ' au') %></p>
                    <% end %>
                    <p>üìç <%= race.address.gsub(/([()])/,' \1 ') %></p>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <%= link_to "Add a race", new_race_path, class:"btn btn-primary" %>
      <% end %>
  </div>
</div>
