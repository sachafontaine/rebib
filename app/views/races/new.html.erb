<div class="container">
  <div class="row mt-4 mb-4">
    <div class="col-xs-12 col-sm-8">
      <h2 class="mb-4">Ajouter une course</h2>
      <hr>
      <%= simple_form_for @race do |f| %>
        <%= f.input :name, label: "Nom de la course" %>
        <%= f.input :sport,
                                wrapper_html: {class: "d-flex flex-column"},
                                required: false,
                                input_html: { autocomplete: "sport" },
                                as: :select, label: "Sport de l'évènement",
                                collection: [['running', 'Running'], ['bike', 'Vélo'], ['triathlon', 'Triathlon']],
                                label_method: :second, required: true,
                                value_method: :first %>
        <%= f.input :address,
                      input_html: { data: { geocoder_target: "address" }, class: "d-none" },
                      label: "Ville de la course",
                      wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
        <%= f.input :date, as: :date, html5: true, label: "Date de la course" %>
        <%= f.submit "Envoyer", class: "btn btn-flat" %>
      <% end %>
      <div class="mt-3 link">
        <%= link_to "Retour aux courses", races_path %>
      </div>
    </div>
    <div class="col-sm-4">
      <img class="rounded" width="100%" max-height="500" src="https://images.unsplash.com/photo-1560789363-cfa0cbf748f8?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=750&q=80" alt="">
    </div>
  </div>
</div>
