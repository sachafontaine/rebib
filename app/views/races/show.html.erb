<div class="container">
  <div class="row mt-4 mb-4">
    <div class="col-xs-12 col-sm-8">
      <h2 class="mb-4"> <%= @race.name %></h2>
      <% unless @race.date.match?(/DATE NON COMMUNIQUEE/) %>
        <p>📅 <%= @race.date.gsub(/(au)/, ' au') %></p>
      <% else %>
        <p>📅 La date de cette course n'est pas connue de nos services. <%= link_to "Suggérer une date", edit_race_path %></p>
      <% end %>
      <p>📍 <%= @race.address.gsub(/([()])/,' \1 ') %></p>
      <hr>
      <div class="row">
        <% @race.bibs.first(6).each do |bib| %>
          <div class="col-sm-6 col-md-6 mb-3">
            <%= link_to bib, class:"card-offer" do %>
              <div class="card-offer">
                <div class="card-offer-infos">
                  <h4>Dossard de <%= bib.user.first_name %></h4>
                  <p><%= bib.race.name %></p>
                  <p><%= bib.created_at.strftime("Déposé le %m/%d/%Y") %></p>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-sm-4">
      <img class="rounded" width="100%" max-height="500" src="https://images.unsplash.com/photo-1444491741275-3747c53c99b4?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=774&q=80" alt="">
    </div>
  </div>
</div>
