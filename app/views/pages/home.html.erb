<%= render 'shared/banner' %>
<div class="container mt-4 mb-4">
  <h2 class="text-center mb-4">Courses à venir</h2>
  <div class="row">
    <% @races.first(9).each do |race| %>
      <div class="col-sm-4 col-md-4 mb-3">
        <%= link_to race, class:"card-offer" do %>
          <div class="card-offer">
            <div class="card-offer-infos">
              <h4><%= race.name %></h4>
              <% unless race.date.match?(/DATE NON COMMUNIQUEE/)  %>
                <p>📅 <%= race.date.gsub(/(au)/, ' au') %></p>
              <% end %>
              <p>📍 <%= race.address.gsub(/([()])/,' \1 ') %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<%= render 'shared/banner_custom' %>
