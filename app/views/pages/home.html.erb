<%= render 'shared/banner' %>
<div class="container mt-4 mb-4">
  <h2 class="text-center mb-4">Next races</h2>
  <div class="row">
    <% @races.first(6).each do |race| %>
      <div class="col-sm-4 col-md-4 mb-3">
        <%= link_to race, class:"card-offer" do %>
          <div class="card-offer">
            <div class="card-offer-infos">
              <p><%= race.name %></p>
              <p>📅 <%= race.date %></p>
              <p>📍 <%= race.address %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<%= render 'shared/banner_custom' %>
