<div class="container">
  <h2 class="mt-4 text-center"> Bonjour <%= current_user.first_name %> !</h2>
    <div class="mb-3">
      <h3 class="text-center">Vos dossards</h3>
      <% if current_user.bibs.count > 0 %>
        <div class="row">
          <% current_user.bibs.reverse.each do |bib| %>
            <div class="col-sm-4 col-md-4 mb-3">
              <%= link_to bib, class:"card-offer" do %>
                <div class="card-offer">
                  <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
                  <div class="card-offer-infos">
                    <h4><%= bib.race.name %></h4>
                    <% unless bib.race.date.match?(/Non connue/)  %>
                      <p>📅 <%= bib.race.date.gsub(/(au)/, ' au') %></p>
                    <% end %>
                    <p>📍 <%= bib.race.address.gsub(/([()])/,' \1 ') %></p>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
      <% else %>
        <p class="text-center">Vous n'avez pas acheté votre premier dossard ? Profitez-en !</p>
        <div class="text-center">
          <%= link_to "Acheter un dossard", new_bib_path, class:"btn btn-primary" %>
        </div>
      <% end %>
        </div>
    </div>
</div>
