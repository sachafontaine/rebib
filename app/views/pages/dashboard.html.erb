<div class="container">
  <h1 class="mt-4"> Hello <%= current_user.first_name %>!</h1>
    <div class="mb-3">
      <h2>Your bibs</h2>
      <% if current_user.bibs.count > 0 %>
        <div class="row">
          <% current_user.bibs.reverse.each do |bib| %>
            <div class="col-sm-4 col-md-4 mb-3">
              <%= link_to bib, class:"card-offer" do %>
                <div class="card-offer">
                  <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
                  <div class="card-offer-infos">
                    <h4><%= bib.race.name %></h4>
                    <% unless bib.race.date.match?(/Non connue/)  %>
                      <p>📅 <%= @bib.race.date.gsub(/(au)/, ' au') %></p>
                    <% end %>
                    <p>📍 <%= bib.race.address.gsub(/([()])/,' \1 ') %></p>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
      <% else %>
        <p>Don't have your first bib yet? Buy one!</p>
        <%= link_to "Buy a bib", new_bib_path, class:"btn btn-primary" %>
      <% end %>
        </div>
    </div>
</div>
