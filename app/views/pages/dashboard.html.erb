<div class="container">

  <h2 class="mt-4 mb-4 text-center"> Bonjour <%= current_user.first_name %> 👋🏼</h2>

  <div class="container mt-4 mb-4" data-controller="switch-tab">

    <ul class="list-inline tabs-underlined" id="dashboard-tab">
      <li>
        <h4>
          <a href="" class="tab-underlined active" data-action="click->switch-tab#switch" data-switch-tab-target="tab" data-tab-name="orders-user">Commandes</a>
        </h4>
      </li>
      <li>
        <h4>
        <a href="" class="tab-underlined" data-action="click->switch-tab#switch" data-switch-tab-target="tab" data-tab-name="bibs-user">Mes dossards</a>
        </h4>
      </li>
    </ul>

    <div class="tab-content">

        <div class="cards" id="your-orders" data-switch-tab-target="content" data-tab-name="orders-user">
          <% current_user.orders.each do |order| %>
            <div class="col-sm-6 col-md-6 mb-3">
              <%= link_to order, class:"card-offer" do %>
                <div class="card-offer">
                  <div class="card-offer-infos">
                    <h4><%= order.bib.race.name %></h4>
                    <p>Départ le : <%= order.bib.race.date.to_date.strftime('%d/%m/%Y') %></p>
                    <p>📍 <%= order.bib.race.address.gsub(/([()])/,' \1 ') %></p>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>

        <div class="cards d-none" id="your-bibs" data-switch-tab-target="content" data-tab-name="bibs-user">
          <% if current_user.bibs.count > 0 %>
            <div class="row">
              <% current_user.bibs.reverse.each do |bib| %>
                <div class="col-sm-6 col-md-6 mb-3">
                  <%= link_to bib, class:"card-offer" do %>
                    <div class="card-offer">
                      <div class="card-offer-infos">
                      <div class="col-md-3 etiquette-status px-2 py-2 mb-2">
                        <% if bib.available == '2' %>
                          <p>Vendu</p>
                        <% else %>
                          <p>En vente</p>
                        <% end %>
                      </div>
                        <h4><%= bib.race.name %></h4>
                        <p>Départ le : <%= bib.race.date.to_date.strftime('%d/%m/%Y') %></p>
                        <p>📍 <%= bib.race.address.gsub(/([()])/,' \1 ') %></p>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-center">Vous n'avez pas acheté votre premier dossard ? Profitez-en !</p>
            <div class="text-center">
              <%= link_to "Acheter un dossard", new_bib_path, class:"btn btn-primary" %>
            </div>
          <% end %>
        </div>

    </div>

  </div>
</div>
