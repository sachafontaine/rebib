<div class="container col-md-6">
  <h2 class="text-center mt-4 mb-4">Conversation avec <%= current_user == @conversation.sender ? @conversation.recipient.first_name : @conversation.sender.first_name %> ðŸ“¨</h2>

  <div class="messages">
    <% @conversation.messages.each do |message| %>
      <div id="message-<%= message.id %>">
        <small>
          <strong><%= message.user.first_name %></strong>
          <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
        </small>
        <p><%= message.content %></p>
      </div>
    <% end %>
  </div>

  <%= simple_form_for [@conversation, @message], remote: true, html: {class: "d-flex"} do |f| %>
    <%= f.input :content, label: false,
      placeholder: "Ã‰crivez votre message ici",
      wrapper_html: {class: "flex-grow-1"} %>
    <%= f.submit "Send", class: "btn btn-primary" %>
  <% end %>
</div>
